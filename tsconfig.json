{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/**/*"
	],
	"compilerOptions": {
		"module": "ES6",
		"allowJs": true,
		"checkJs": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declarationDir": "dist",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noEmitOnError": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	}
}
